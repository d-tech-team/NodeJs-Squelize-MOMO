<%- include('header'); -%>
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-sm-0">Listjs</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                    <li class="breadcrumb-item active">Listjs</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-lg-12">
                        <div id="resultData"></div>
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title mb-0">Add, Edit & Remove</h4>
                            </div><!-- end card header -->

                            <div class="card-body">
                                <div id="customerList">
                                    <div class="row g-4 mb-3">
                                        <div class="col-sm-auto">
                                            <div>
                                                <button type="button" class="btn btn-success add-btn"
                                                    data-bs-toggle="modal" id="create-btn"
                                                    data-bs-target="#showModal"><i
                                                        class="ri-add-line align-bottom me-1"></i> Add</button>
                                            </div>
                                        </div>
                                        <div class="col-sm">
                                            <div class="d-flex justify-content-sm-end">
                                                <div class="search-box ms-2">
                                                    <input type="text" class="form-control search"
                                                        placeholder="Search...">
                                                    <i class="ri-search-line search-icon"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="table-responsive table-card mt-3 mb-1">
                                        <table class="table align-middle table-nowrap" id="customerTable">
                                            <thead class="table-light">
                                                <tr>
                                                    <th class="sort" data-sort="top">Top</th>
                                                    <th class="sort" data-sort="phone">Phone</th>
                                                    <th class="sort" data-sort="price">Price</th>
                                                    <th class="sort" data-sort="gift">Gift</th>
                                                    <th class="sort" data-sort="action">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="top" class="list form-check-all">
                                                <tr>
                                                    <% data.forEach((item,i)=> {%>
                                                        <td class="top">
                                                            <%= ++i %>
                                                        </td>
                                                        <td class="phone">
                                                            <%= item.phone %>
                                                        </td>
                                                        <td class="price">
                                                            <%=Intl.NumberFormat().format(item.price).replaceAll(',','.')
                                                                %>
                                                        </td>
                                                        <td class="gift">
                                                            <%= Intl.NumberFormat().format(item.gift).replaceAll(',','.')
                                                                %>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex gap-2">
                                                                <div class="edit">
                                                                    <button class="btn btn-sm btn-success edit-item-btn"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#showModal"
                                                                        data-id="<%= item.id %>">Edit</button>
                                                                </div>
                                                                <div class="remove">
                                                                    <button
                                                                        class="btn btn-sm btn-danger remove-item-btn"
                                                                        data-id="<%= item.id %>">Remove</button>
                                                                </div>
                                                            </div>
                                                        </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                        <div class="noresult" style="display: none">
                                            <div class="text-center">
                                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                                    colors="primary:#121331,secondary:#08a88a"
                                                    style="width:75px;height:75px">
                                                </lord-icon>
                                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                                <p class="text-muted mb-0">We've searched more than 150+ Orders We did
                                                    not find any
                                                    orders for you search.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <div class="pagination-wrap hstack gap-2">
                                            <a class="page-item pagination-prev disabled" href="#">
                                                Previous
                                            </a>
                                            <ul class="pagination listjs-pagination mb-0"></ul>
                                            <a class="page-item pagination-next" href="#">
                                                Next
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- end card -->
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->

                <div class="modal fade" id="showModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-light p-3">
                                <h5 class="modal-title" id="exampleModalLabel"></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                                    id="close-modal"></button>
                            </div>
                            <form>
                                <div class="modal-body">

                                    <div class="mb-3" id="modal-id" style="display: none;">
                                        <label for="id-field" class="form-label">ID</label>
                                        <input type="text" id="id-field" class="form-control" placeholder="ID"
                                            readonly />
                                    </div>

                                    <div class="mb-3">
                                        <label for="phone" class="form-label">Phone</label>
                                        <input type="text" id="phone" class="form-control" placeholder="Enter phone"
                                            required />
                                        <span id="errPhone" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="price" class="form-label">Price</label>
                                        <input type="text" id="price" class="form-control" placeholder="Enter price"
                                            required />
                                        <span id="errPrice" class="text-danger"></span>

                                    </div>

                                    <div class="mb-3">
                                        <label for="gift" class="form-label">Gift</label>
                                        <input type="text" id="gift" class="form-control" placeholder="Enter gift"
                                            required />
                                        <span id="errGift" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class="hstack gap-2 justify-content-end">
                                        <button type="button" class="btn btn-light"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-success" id="add-btn">Add</button>
                                        <button type="button" class="btn btn-success" id="edit-btn">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                                    id="btn-close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mt-2 text-center">
                                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop"
                                        colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px">
                                    </lord-icon>
                                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                                        <h4>Are you Sure ?</h4>
                                        <p class="text-muted mx-4 mb-0">Are you Sure You want to Remove this Record ?
                                        </p>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                                    <button type="button" class="btn w-sm btn-light"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn w-sm btn-danger " id="delete-record">Yes, Delete
                                        It!</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end modal -->

            </div>
            <!-- container-fluid -->
        </div>
        <!-- End Page-content -->

        <%- include('footer') %>
            <script>

                const getMsg = (data, param) => {
                    const msg = data.filter(item => {
                        if (item.param == param) {
                            return item.msg
                        }
                    })
                    return msg.length > 0 ? msg[0].msg : ''
                }

                const showAlert = (msg, type) => {
                    return `<div class="alert alert-${type}" role="alert">
    <strong> ${msg} </strong>
</div>`
                }

                const errPhone = $('#errPhone')
                const errPrice = $('#errPrice')
                const errGift = $('#errGift')

                $('#add-btn').click((e) => {
                    e.preventDefault()

                    const urlApi = '/admin/top'
                    const phone = $('#phone').val().trim()
                    const price = $('#price').val().trim()
                    const gift = $('#gift').val().trim()
                    const token = $('meta[name="csrf-token"]').attr('content')
                    const result = $('#resultData')
                    $.ajax({
                        url: urlApi,
                        type: 'POST',
                        headers: {
                            'CSRF-Token': token
                        },
                        data: {
                            phone,
                            price,
                            gift
                        },
                        success: (res) => {
                            if (res.status) {
                                $('#showModal').modal('hide')
                                result.html(showAlert(res.msg, 'success'))
                                setTimeout(() => {
                                    window.location.reload()
                                }, 2000);
                            }
                            else {
                                errPhone.html(getMsg(res.errors, 'phone'))
                                errPrice.html(getMsg(res.errors, 'price'))
                                errGift.html(getMsg(res.errors, 'gift'))
                            }
                        },
                        error: (err) => {
                            console.log(err)
                        }
                    })
                })

                $('.edit-item-btn').click((e) => {
                    const id = e.target.getAttribute('data-id')
                    const apiUrl = '/admin/top/' + id

                    $.ajax({
                        url: apiUrl,
                        type: 'GET',
                        success: (res) => {
                            if (res.status) {
                                $('#edit-btn').attr('disabled', false)
                                $('#showModal').modal('show')
                                $('#phone').val(res.data.phone)
                                $('#price').val(res.data.price)
                                $('#gift').val(res.data.gift)
                                $('#id').val(res.data.id)
                                $('#edit-btn').attr('data-id', id)
                            }
                        },
                        error: (err) => {
                            $('#showModal').modal('hide')
                            result.html('Something went wrong', 'danger')
                        }
                    })
                })

                $('#edit-btn').click(e => {

                    const id = e.target.getAttribute('data-id')
                    const urlApi = '/admin/top/' + id
                    const phone = $('#phone').val().trim()
                    const price = $('#price').val().trim()
                    const gift = $('#gift').val().trim()
                    const token = $('meta[name="csrf-token"]').attr('content')
                    const result = $('#resultData')

                    $.ajax({
                        url: urlApi,
                        type: 'PUT',
                        headers: {
                            'CSRF-Token': token
                        },
                        data: {
                            phone,
                            price,
                            gift
                        },
                        success: (res) => {
                            if (res.status) {
                                $('#showModal').modal('hide')
                                result.html(showAlert(res.msg, 'success'))
                                setTimeout(() => {
                                    window.location.reload()
                                }, 2000);
                            }
                            else {
                                errPhone.html(getMsg(res.errors, 'phone'))
                                errPrice.html(getMsg(res.errors, 'price'))
                                errGift.html(getMsg(res.errors, 'gift'))
                            }

                        },
                        error: (err) => {
                            console.log(err)
                            $('#showModal').modal('hide')
                            result.html('Something went wrong', 'danger')
                        }
                    })
                })

                $('.remove-item-btn').click(e => {
                    const id = e.target.getAttribute('data-id')
                    const urlApi = '/admin/top/' + id
                    const token = $('meta[name="csrf-token"]').attr('content')
                    const result = $('#resultData')

                    $.ajax({
                        url: urlApi,
                        type: 'DELETE',
                        headers: {
                            'CSRF-Token': token
                        },
                        success: (res) => {
                            if (res.status) {
                                result.html(showAlert(res.msg, 'success'))
                                setTimeout(() => {
                                    window.location.reload()
                                }, 2000);
                            }
                            else {
                                result.html(showAlert(res.msg, 'danger'))
                            }
                        },
                        error: (err) => {
                            console.log(err)
                            result.html('Something went wrong', 'danger')
                        }
                    })
                })

                $('#create-btn').click(e => {
                    $('#edit-btn').attr('disabled', true)
                })
            </script>

            </html>